<Window x:Class="DeepSeeArch.UI.ResultDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Ergebnis-Details"
        Width="900"
        Height="700"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                   Mode="PrimaryMid" 
                                   Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ergebnis-Details" 
                              FontSize="20" 
                              FontWeight="Bold"/>
                    <TextBlock Text="{Binding Result.Domain}" 
                              FontSize="12" 
                              Opacity="0.8"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Style="{StaticResource MaterialDesignToolButton}"
                       Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                </Button>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel>
                
                <!-- Basis-Informationen -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Basis-Informationen" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Titel:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.Title}" TextWrapping="Wrap" Margin="0,4"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="URL:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Margin="0,4">
                                <Hyperlink NavigateUri="{Binding Result.Url}" RequestNavigate="Hyperlink_RequestNavigate">
                                    <TextBlock Text="{Binding Result.Url}"/>
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Kategorie:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Result.Category}" Margin="0,4"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Confidence:" FontWeight="SemiBold" Margin="0,4"/>
                            <ProgressBar Grid.Row="3" Grid.Column="1" 
                                       Value="{Binding Result.ConfidenceScore}" 
                                       Maximum="1" 
                                       Height="20" 
                                       Margin="0,4"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Gefunden:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Result.FoundAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Margin="0,4"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Account-Informationen -->
                <materialDesign:Card Margin="0,0,0,16" 
                                    Padding="16"
                                    Visibility="{Binding HasAccountInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Account" 
                                                    Width="20" 
                                                    Height="20" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="Account-Informationen" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Missbrauchs-Warnung -->
                        <Border Visibility="{Binding IsPotentialMisuse, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Background="#FFFFEBEE"
                               BorderBrush="#FFF44336"
                               BorderThickness="2"
                               CornerRadius="4"
                               Padding="12"
                               Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertCircle" 
                                                        Width="24" 
                                                        Height="24" 
                                                        Foreground="#FFF44336"
                                                        VerticalAlignment="Top"
                                                        Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="⚠️ Möglicher Identitätsmissbrauch erkannt!" 
                                              FontWeight="Bold" 
                                              Foreground="#FFF44336"/>
                                    <TextBlock Text="{Binding Result.AccountInfo.MisuseReason}" 
                                              TextWrapping="Wrap" 
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.AccountInfo.Username}" Margin="0,4"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Result.AccountInfo.DisplayName}" Margin="0,4"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="E-Mail:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Result.AccountInfo.Email}" Margin="0,4"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Bio:" FontWeight="SemiBold" Margin="0,4" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Result.AccountInfo.Bio}" TextWrapping="Wrap" Margin="0,4"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Location:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Result.AccountInfo.Location}" Margin="0,4"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Followers:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Result.AccountInfo.FollowerCount}" Margin="0,4"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Following:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Result.AccountInfo.FollowingCount}" Margin="0,4"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Fuzzy-Match-Informationen -->
                <materialDesign:Card Margin="0,0,0,16" 
                                    Padding="16"
                                    Visibility="{Binding HasFuzzyMatch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="FormatText" 
                                                    Width="20" 
                                                    Height="20" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="Match-Analyse" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Match-Typ:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.FuzzyMatch.Type}" Margin="0,4"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ähnlichkeit:" FontWeight="SemiBold" Margin="0,4"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="{Binding Result.FuzzyMatch.SimilarityScore, StringFormat='{}{0}%'}" 
                                          FontWeight="Bold"
                                          Margin="0,0,8,0"/>
                                <ProgressBar Value="{Binding Result.FuzzyMatch.SimilarityScore}" 
                                           Maximum="100" 
                                           Width="200"
                                           Height="20"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Gefundener Text:" FontWeight="SemiBold" Margin="0,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Result.FuzzyMatch.MatchedText}" TextWrapping="Wrap" Margin="0,4"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- KI-Analyse -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Brain" 
                                                    Width="20" 
                                                    Height="20" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="KI-Analyse" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Zusammenfassung:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Result.AiSummary}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                        <TextBlock Text="Extrahierte Entitäten:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding Result.AiExtractedEntities}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Chip Content="{Binding}" Margin="4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Snippet -->
                <materialDesign:Card Padding="16">
                    <StackPanel>
                        <TextBlock Text="Snippet" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding Result.Snippet}" TextWrapping="Wrap"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
               Background="{DynamicResource MaterialDesignDivider}" 
               Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                       Content="URL öffnen"
                       Command="{Binding OpenUrlCommand}"
                       Margin="0,0,8,0"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                       Content="Schließen"
                       Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
