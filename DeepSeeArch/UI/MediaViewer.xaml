<!-- DeepSeeArch/UI/MediaViewer.xaml -->
<Window x:Class="DeepSeeArch.UI.MediaViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Media Viewer"
        Width="1100"
        Height="700"
        WindowStartupLocation="CenterOwner">
    <DockPanel>

        <!-- Top Controls -->
        <Border DockPanel.Dock="Top" Padding="10" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SourceText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="13"
                           />

                <Button Grid.Column="1" Margin="10,0,0,0" Padding="12,6" Click="OnPlayClick" Content="Play" />
                <Button Grid.Column="2" Margin="10,0,0,0" Padding="12,6" Click="OnPauseClick" Content="Pause" />
                <Button Grid.Column="3" Margin="10,0,0,0" Padding="12,6" Click="OnStopClick" Content="Stop" />
            </Grid>
        </Border>

        <!-- Viewer -->
        <TabControl x:Name="Tabs" Margin="10">
            <TabItem Header="Media">
                <Grid>
                    <MediaElement x:Name="Player"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"
                                  />
                    <TextBlock x:Name="MediaHint"
                               Text="Kein Media geladen."
                               Opacity="0.7"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </TabItem>

            <TabItem Header="Web">
                <Grid>
                    <wv2:WebView2 x:Name="Web"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 />
                    <TextBlock x:Name="WebHint"
                               Text="Kein Web-Link geladen."
                               Opacity="0.7"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>
